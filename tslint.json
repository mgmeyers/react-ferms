{
  "extends": "tslint:recommended",
  "rules": {
    "arrow-parens": false,
    "curly": false,
    "eofline": false,
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "linebreak-style": [true, "LF"],
    "member-access": false,
    "no-conditional-assignment": true,
    "no-console": { "severity": "warning", "options": ["debug", "info", "log", "time", "timeEnd", "trace"] },
    "no-debugger": { "severity": "warn" },
    "no-invalid-this": { "severity": "warn" },
    "no-return-assign": ["error", "always"],
    "no-trailing-whitespace": false,
    "no-var-keyword": true,
    "prefer-const": { "severity": "warn" },
    "prefer-template": { "severity": "warn" },
    "quotemark": [true, "single", "jsx-double"],
    "semicolon": [true, "never"],
    "trailing-comma": [true, { "esSpecCompliant": true }]
  }
}
